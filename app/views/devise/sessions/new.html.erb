<div class="mx-auto md:w-2/3 w-full">
  <h2 class="font-bold text-4xl">Log in</h2>

  <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), class: 'contents') do |f| %>
    <div class="field my-5">
      <%= f.label :email %>
      <%=
        f.email_field(
          :email,
          autofocus: true,
          autocomplete: "email",
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        )
      %>
    </div>

    <div class="field my-5">
      <%= f.label :password %>
      <%=
        f.password_field(
          :password,
          autocomplete: "current-password",
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        )
      %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field my-5">
        <%= f.check_box :remember_me, class: 'rounded text-fuchsia-600 focus:ring-fuchsia-600' %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions inline">
      <%=
        f.submit(
          "Log in",
          class: 'rounded-lg py-3 px-5 bg-fuchsia-600 text-white inline-block font-medium cursor-pointer'
        )
      %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
