<div class="mx-auto md:w-2/3 w-full">
  <div class="font-bold text-4xl">Edit <%= resource_name.to_s.humanize %></div>

  <%=
    form_with(
      model: resource,
      scope: resource_name,
      url: registration_path(resource_name),
      method: :put,
      class: 'contents'
    ) do |f|
  %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field my-5">
      <%= f.label :email %>
      <%=
        f.email_field(
          :email,
          autofocus: true,
          autocomplete: "email",
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        )
      %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field my-5">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
      <%=
        f.password_field(
          :password,
          autocomplete: "new-password",
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        )
      %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field my-5">
      <%= f.label :password_confirmation %>
      <%=
        f.password_field(
          :password_confirmation,
          autocomplete: "new-password",
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        )
      %>
    </div>

    <div class="field my-5">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
      <%=
        f.password_field(
          :current_password,
          autocomplete: "current-password",
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        )
      %>
    </div>

    <div class="actions inline">
      <%=
        f.submit(
          "Update",
          class: 'rounded-lg py-3 px-5 bg-fuchsia-600 text-white inline-block font-medium cursor-pointer'
        )
      %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>
    Unhappy?
    <%=
      button_to(
        "Cancel my account",
        registration_path(resource_name),
        data: { confirm: "Are you sure?" },
        method: :delete,
        class: 'text-gray-700'
      )
    %>
  </p>

  <%= link_to "Back", :back, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
</div>
