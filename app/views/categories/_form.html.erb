<%= form_with(model: category, class: 'contents') do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <div class="font-medium text-2xl">
        <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:
      </div>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%=
      form.text_field(
        :name,
        class: %w(
          block
          shadow
          rounded-md
          border
          border-gray-200
          outline-none
          px-3
          py-2
          mt-2
          w-full
          focus:border-fuchsia-600
          focus:ring-fuchsia-600
        )
      )
    %>
  </div>

  <div class="my-5">
    <%= form.label :context %>
    <%=
      form.select(
        :context,
        [['Income', 'income'], ['Expense', 'expense']],
        { selected: category.context },
        {
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        }
      )
    %>
  </div>

  <div class="my-5">
    <%= form.label :icon %>
    <%=
      form.text_field(
        :icon,
        class: %w(
          block
          shadow
          rounded-md
          border
          border-gray-200
          outline-none
          px-3
          py-2
          mt-2
          w-full
          focus:border-fuchsia-600
          focus:ring-fuchsia-600
        )
      )
    %>
  </div>

  <div class="inline">
    <%= form.submit class: 'rounded-lg py-3 px-5 bg-fuchsia-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
