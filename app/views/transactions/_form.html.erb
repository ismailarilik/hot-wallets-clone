<%= form_with(model: transaction, class: 'contents') do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%=
      form.text_field(
        :name,
        class: %w(
          block
          shadow
          rounded-md
          border
          border-gray-200
          outline-none
          px-3
          py-2
          mt-2
          w-full
          focus:border-fuchsia-600
          focus:ring-fuchsia-600
        )
      )
    %>
  </div>

  <div class="my-5">
    <%= form.label :category_id %>
    <%=
      form.select(
        :category_id,
        Category.all.collect {|category| [category.name, category.id]},
        {},
        {
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        }
      )
    %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%=
      form.text_field(
        :price,
        class: %w(
          block
          shadow
          rounded-md
          border
          border-gray-200
          outline-none
          px-3
          py-2
          mt-2
          w-full
          focus:border-fuchsia-600
          focus:ring-fuchsia-600
        )
      )
    %>
  </div>

  <div class="my-5">
    <%= form.label :wallet_id %>
    <%=
      form.select(
        :wallet_id,
        Wallet.all.collect {|wallet| [wallet.name, wallet.id]},
        {},
        {
          class: %w(
            block
            shadow
            rounded-md
            border
            border-gray-200
            outline-none
            px-3
            py-2
            mt-2
            w-full
            focus:border-fuchsia-600
            focus:ring-fuchsia-600
          )
        }
      )
    %>
  </div>

  <div class="inline">
    <%= form.submit class: 'rounded-lg py-3 px-5 bg-fuchsia-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
