<div id="<%= dom_id transaction %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= transaction.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= transaction.category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= transaction.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Wallet:</strong>
    <%= transaction.wallet.name %>
  </p>

  <% if action_name != "show" %>
    <%=
      link_to "Show this transaction", transaction, class: 'rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium'
    %>
    <%=
      link_to(
        'Edit this transaction',
        edit_transaction_path(transaction),
        class: 'rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium'
      )
    %>
    <hr class="mt-6">
  <% end %>
</div>
